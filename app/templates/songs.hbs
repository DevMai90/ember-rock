{{page-title "Songs"}}

<ul>
  {{!-- each helper - loops through elements as 'song' --}}
  {{!-- array helper - Creates an array with arguments passed in --}}
  {{!-- hash helper - Creates a POJO --}}
  {{#each
    (array
      (hash title="Black Dog" band="Led Zeppelin" rating=3)
      (hash title="Yellow Ledbetter" band="Pearl Jam" rating=4)
      (hash title="The Pretender" band="Foo Fighters" rating=2)
    ) as |song|
  }}
    <li class="leading-loose">
      {{song.title}} by {{song.band}} <span class="float-right">{{song.rating}}</span>
    </li>
  {{/each}}
</ul>
